package util;

public class TextUtil {
	
	public static String capitalize(String term){
		String [] tokens = term.split(" ");
		String newTerm = "";
		for(String token : tokens){
			newTerm = newTerm + " " + token.substring(0, 1).toUpperCase() + token.substring(1);
		}
		
		return newTerm.trim();
		
	}

}
